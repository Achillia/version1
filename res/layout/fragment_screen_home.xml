

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<LinearLayout
	    android:id="@+id/content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical" 
	    >
    
	    <LinearLayout 
	        android:id="@+id/next_class_widget"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@color/grey_middle"
	        android:layout_margin="16dp">
		
	        <TextView android:id="@+id/text_next_class_id"
	            style="?android:textAppearanceLarge"
	            android:textStyle="bold"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	        
	        <TextView android:id="@+id/text_next_class_name"
	            style="?android:textAppearanceLarge"
	            android:textStyle="bold"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	        
	         <TextView android:id="@+id/text_next_class_date"
	            style="?android:textAppearanceLarge"
	            android:textStyle="normal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	         
	         <TextView android:id="@+id/text_next_class_start_time"
	            style="?android:textAppearanceLarge"
	            android:textStyle="normal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	         
	         <TextView android:id="@+id/text_next_class_end_time"
	            style="?android:textAppearanceLarge"
	            android:textStyle="normal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	        
	        <TextView android:id="@+id/text_next_class_location"
	            style="?android:textAppearanceLarge"
	            android:textStyle="normal"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/news_feed_mah"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/grey_middle"
	        android:orientation="vertical"
	        android:layout_margin="16dp">
	        
	        
	
	    </LinearLayout>
	    
	     <LinearLayout 
	        android:id="@+id/calender_feed_mah"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="16dp">
	
	    </LinearLayout>
    
    </LinearLayout>
   

</ScrollView>

