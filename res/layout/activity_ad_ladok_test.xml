<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".TestActivity" >

    <TextView
        android:id="@+id/tvadladoktest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/reloadButton"
        android:layout_centerHorizontal="true"
        android:maxLines="20"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="Empty"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/passWordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reloadButton"
        android:layout_below="@+id/userIDet"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <Button
        style="@style/mah_button_red"
        android:id="@+id/reloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvadladoktest"
        android:layout_below="@+id/passWordET"
        android:onClick="updateButtonPressed"
        android:text="Update" />

    <EditText
        android:id="@+id/userIDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passWordET"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="mahID" />

    <Button
        style="@style/mah_button_red"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvadladoktest"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/reloadButton"
        android:onClick="printButtonPressed"
        android:text="Print No Updates" />

</RelativeLayout>
