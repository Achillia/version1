<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_Find_TextUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/rg_Find_Pager_Indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_Find_Radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/find_page_indicator"
            android:checked="true"
            android:focusable="false"
            android:tag="0" />

        <RadioButton
            android:id="@+id/rb_Find_Radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/find_page_indicator"
            android:checked="false"
            android:focusable="false"
            android:tag="1" />

        <RadioButton
            android:id="@+id/rb_Find_Radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/find_page_indicator"
            android:checked="false"
            android:focusable="false"
            android:tag="2" />

        <RadioButton
            android:id="@+id/rb_Find_Radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/find_page_indicator"
            android:checked="false"
            android:focusable="false"
            android:tag="3" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vp_Find_Pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>